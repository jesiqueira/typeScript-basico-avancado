<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Criou ou edite seu contato</p>
    </div>
    <%- include('includes/messages') %> 
    <% if(contato._id ) {%>
    <form class="mt-3" action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>         
        <form class="mt-3" action="/contato/register" method="POST">
        <%}%>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= contato.nome %>" />
      </div>
      <div class="mb-3">
        <label for="sobrenome" class="form-label">Sobrenome</label>
        <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%= contato.sobrenome%>" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= contato.email%>" />
      </div>
      <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="tel" class="form-control" id="telefone" name="telefone" value="<%= contato.telefone%>" />
      </div>
      <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
  </div>
  <%- include('includes/footer') %>
</div>
