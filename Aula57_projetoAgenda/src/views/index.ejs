<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>
    </div>
    <%- include('includes/messages') %>
    <div class="responsive-table">
      <table class="table my-3">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Telefone</th>
            <th scope="col">Email</th>
            <th scope="col" colspan="2" class="text-center">Ações</th>
          </tr>
        </thead>
        <% if (contatos.length === 0) { %>
        <tr>
          <td colspan="6" class="text-center">Nenhum contato encontrado</td>
        </tr>
        <% } %> <% contatos.forEach((contato) => { %>
        <tr>
          <td><%= contato.nome %></td>
          <td><%= contato.sobrenome %></td>
          <td><%= contato.telefone %></td>
          <td><%= contato.email %></td>
          <td class="text-center"><a href="/contato/index/<%= contato._id %>">Editar</a></td>
          <td class="text-center"><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
        </tr>
        <% }) %>
      </table>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
